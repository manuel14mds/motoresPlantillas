html
    head
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title='plantilla'
    body
        ul(class="reveal nav nav-tabs")
                li(class="nav-item")
                    a(href="http://localhost:8080/", class="nav-link" ) Home
                li(class="nav-item")
                    a(href="http://localhost:8080/newProduct", class="nav-link") Agregar Producto
                li(class="nav-item")
                    a(href="http://localhost:8080/products", class="nav-link active") Listar Productos

        h1='Lista de productos'

        ul(class="list-group list-group-horizontal row")
            li(class="list-group-item col-4 bg-primary")='Nombre'
            li(class="list-group-item col-4 bg-primary")='Precio'
            li(class="list-group-item col-4 bg-primary")='Imagen'
        
        ul(class="list-group list-group-horizontal row")
            if listVoid
                h2='No hay Productos agregados todavia'
            else
                each item in products
                    li(class="list-group-item col-4")= item.name
                    li(class="list-group-item col-4")= item.price
                    li(class="list-group-item col-4")
                        img(src="http://localhost:8080/img/"+item.img, alt="product image", style='height:100px;')

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js", integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB", crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js", integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13", crossorigin="anonymous")
